<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/app_margin_2x"
    android:paddingEnd="@dimen/app_margin_2x"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/previousOrderDateText"
        style="@style/AC.Text.B2.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/app_margin_1x"
        android:layout_marginTop="@dimen/app_margin_1x"
        android:layout_marginEnd="@dimen/app_margin_1x"
        android:layout_marginBottom="@dimen/app_margin_half"
        android:letterSpacing="0.14"
        tools:text="12/06/2020" />

    <androidx.cardview.widget.CardView
        android:id="@+id/previousOrderCard"
        style="@style/AC.Card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/app_margin_half"
        android:foreground="?selectableItemBackground"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/app_margin_1x_half"
                android:paddingTop="@dimen/app_margin_1x"
                android:paddingEnd="@dimen/app_margin_1x_half"
                android:paddingBottom="@dimen/app_margin_1x"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/previousOrderCompanyText"
                    style="@style/AC.Text.B2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:text="Wonderful House" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/previousOrderTimeText"
                    style="@style/AC.Text.B2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/app_margin_1x"
                    tools:text="10.36am" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/previousOrderStatusLayout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/app_margin_half"
                    tools:background="@color/ac_green_50">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/previousOrderStatusImage"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        tools:srcCompat="@drawable/ic_successful_order" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/previousOrderTotalText"
                        style="@style/AC.Text.B2.Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/app_margin_half"
                        tools:text="MYR 585.60"
                        tools:textColor="@color/ac_green_500" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/previousOrderSalesAgentLayout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/ac_blue_50"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/app_margin_half">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        app:srcCompat="@drawable/ic_order_salesagent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/previousOrderSalesAgentText"
                        style="@style/AC.Text.B2.Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/app_margin_half"
                        android:textColor="@color/ac_blue_500"
                        tools:text="Ichigo Kurosaki " />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>