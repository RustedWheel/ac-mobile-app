<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cartExceededLimitLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/app_margin_3x"
    android:paddingTop="@dimen/app_margin_half"
    android:paddingEnd="@dimen/app_margin_3x">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/cartExceededCreditLimitButton"
        style="@style/AC.Text.Button"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginTop="@dimen/app_margin_1x"
        android:background="@drawable/so_violation_indicator_button"
        android:gravity="center"
        android:stateListAnimator="@null"
        android:text="@string/pending_order_credit_limit_exceeded"
        android:textColor="@color/white"
        android:visibility="gone"
        tools:visibility="visible" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/cartExceededOverdueLimitButton"
        style="@style/AC.Text.Button"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginTop="@dimen/app_margin_1x"
        android:background="@drawable/so_violation_indicator_button"
        android:gravity="center"
        android:stateListAnimator="@null"
        android:text="@string/pending_order_overdue_limit_exceeded"
        android:textColor="@color/white"
        android:visibility="gone"
        tools:visibility="visible" />

</LinearLayout>