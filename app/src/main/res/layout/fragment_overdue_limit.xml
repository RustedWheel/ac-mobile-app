<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/component_toolbar" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/overdueLimitDetailsLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:fillViewport="true"
            android:paddingBottom="84dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include
                    layout="@layout/component_customer_id_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/app_margin_4x"
                    android:layout_marginTop="@dimen/app_margin_half"
                    android:layout_marginEnd="@dimen/app_margin_4x"
                    android:layout_marginBottom="@dimen/app_margin_half" />

                <androidx.cardview.widget.CardView
                    style="@style/AC.Card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/app_margin_4x"
                    android:layout_marginEnd="@dimen/app_margin_4x"
                    app:cardElevation="2dp"
                    app:contentPaddingBottom="@dimen/app_margin_2x"
                    app:contentPaddingLeft="@dimen/app_margin_2x_half"
                    app:contentPaddingRight="@dimen/app_margin_2x_half"
                    app:contentPaddingTop="@dimen/app_margin_2x">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatTextView
                                style="@style/AC.Text.B2.SemiBold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/order_overdue_requested_user_id" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/overdueLimitRequestedUserId"
                                style="@style/AC.Text.B2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/app_margin_half" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/app_margin_1x"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatTextView
                                style="@style/AC.Text.B2.SemiBold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/order_overdue_requested_date_time" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/overdueLimitRequestedDateTime"
                                style="@style/AC.Text.B2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/app_margin_half" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/app_margin_1x"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatTextView
                                style="@style/AC.Text.B2.SemiBold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/order_overdue_net_total" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/overdueLimitNetTotal"
                                style="@style/AC.Text.B2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/app_margin_half" />

                        </LinearLayout>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    style="@style/AC.Card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/app_margin_4x"
                    android:layout_marginTop="@dimen/app_margin_2x"
                    android:layout_marginEnd="@dimen/app_margin_4x"
                    android:layout_marginBottom="@dimen/app_margin_4x"
                    app:cardElevation="2dp"
                    app:contentPaddingBottom="@dimen/app_margin_2x"
                    app:contentPaddingLeft="@dimen/app_margin_2x_half"
                    app:contentPaddingRight="@dimen/app_margin_2x_half"
                    app:contentPaddingTop="@dimen/app_margin_2x">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatTextView
                                style="@style/AC.Text.B2.SemiBold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/order_overdue_current_overdue" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/overdueLimitCurrentOverdue"
                                style="@style/AC.Text.B2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/app_margin_half" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/app_margin_1x"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatTextView
                                style="@style/AC.Text.B2.SemiBold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/order_overdue_original_overdue_limit" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/overdueLimitOriginalOverdueLimit"
                                style="@style/AC.Text.B2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/app_margin_half" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/app_margin_1x"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatTextView
                                style="@style/AC.Text.B2.SemiBold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/order_overdue_overdue_limit_increment_percentage" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/overdueLimitIncrementPercentage"
                                style="@style/AC.Text.B2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/app_margin_half" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/app_margin_1x"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatTextView
                                style="@style/AC.Text.B2.SemiBold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/order_overdue_increased_overdue_limit" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/overdueLimitIncreasedOverdueLimit"
                                style="@style/AC.Text.B2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/app_margin_half" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/app_margin_1x"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatTextView
                                style="@style/AC.Text.B2.SemiBold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/order_overdue_exceeded_overdue"
                                android:textColor="@color/ac_red_900" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/overdueLimitExceededOverdue"
                                style="@style/AC.Text.B2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/app_margin_half" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:id="@+id/overdueLimitButtonLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_shadow_white_up"
            android:orientation="vertical"
            android:paddingStart="@dimen/app_margin_2x_half"
            android:paddingTop="@dimen/app_margin_2x_half"
            android:paddingEnd="@dimen/app_margin_2x_half"
            android:paddingBottom="@dimen/app_margin_half"
            app:layout_constraintBottom_toBottomOf="parent">

            <Button
                android:id="@+id/overdueDocDetailsButton"
                style="@style/AC.Button.Red"
                android:layout_width="match_parent"
                android:layout_marginBottom="@dimen/app_margin_1x"
                android:text="@string/order_overdue_doc_details" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>